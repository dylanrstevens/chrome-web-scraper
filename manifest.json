{
    "manifest_version": 3,
    "name": "Web Scraper",
    "description": "Gather all text from a webpage into a text file",
    "version": "1.0",
    "permissions": ["tabs", "activeTab"],
    "icons": {
        "16": "/images/icon16_1.png",
        "48": "/images/icon48_1.png",
        "128": "/images/icon128_1.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Web Scraper"
    },
    "background": {
        "service_worker": "content.js",
        "type": "module"
    }
}